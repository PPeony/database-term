<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--登录转发 -->
<servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>controller.LoginController</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!--注册转发-->
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>controller.RegisterController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <!--检验银行卡密码-->
    <servlet>
        <servlet-name>judgeCardPassword</servlet-name>
        <servlet-class>controller.JudgeCardController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>judgeCardPassword</servlet-name>
        <url-pattern>/judgeCardPassword</url-pattern>
    </servlet-mapping>
    <!--存款-->
    <servlet>
        <servlet-name>save</servlet-name>
        <servlet-class>controller.SaveController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>save</servlet-name>
        <url-pattern>/save</url-pattern>
    </servlet-mapping>
    <!--中转的midway-->
    <servlet>
        <servlet-name>midWay</servlet-name>
        <servlet-class>controller.MidWayController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>midWay</servlet-name>
        <url-pattern>/midWay</url-pattern>
    </servlet-mapping>
    <!--查询 -->
    <servlet>
        <servlet-name>query</servlet-name>
        <servlet-class>controller.QueryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>query</servlet-name>
        <url-pattern>/query</url-pattern>
    </servlet-mapping>
    <!--取款 -->
    <servlet>
        <servlet-name>deposit</servlet-name>
        <servlet-class>controller.DepositController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deposit</servlet-name>
        <url-pattern>/deposit</url-pattern>
    </servlet-mapping>
    <!--检验登录密码-->
    <servlet>
        <servlet-name>judgeLogin</servlet-name>
        <servlet-class>controller.JudgeLoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>judgeLogin</servlet-name>
        <url-pattern>/judgeLogin</url-pattern>
    </servlet-mapping>
    <!--添加银行卡-->
    <servlet>
        <servlet-name>addCard</servlet-name>
        <servlet-class>controller.AddCardController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addCard</servlet-name>
        <url-pattern>/addCard</url-pattern>
    </servlet-mapping>
    <!--查询历史-->
    <servlet>
        <servlet-name>history</servlet-name>
        <servlet-class>controller.FindHistoryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>history</servlet-name>
        <url-pattern>/findHistory</url-pattern>
    </servlet-mapping>
    <!--修改账户密码-->
    <servlet>
        <servlet-name>changeAccountPassword</servlet-name>
        <servlet-class>controller.JudgeAccountPasswordController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>changeAccountPassword</servlet-name>
        <url-pattern>/judgeAccountPassword</url-pattern>
    </servlet-mapping>
</web-app>